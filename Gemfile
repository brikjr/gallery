source "https://rubygems.org"

# Jekyll and plugins
gem "jekyll", "~> 3.8.5"
gem "jekyll-sitemap"
gem "jekyll-paginate"
gem "jekyll-feed"

# GitHub API
gem "octokit", "~> 5.0"
gem "faraday-retry", "~> 2.2"
gem 'rexml'

# Server and environment
gem 'rack'
gem 'rackup'
gem 'dotenv', '~> 2.8'
gem 'sinatra'
gem 'bcrypt'
gem 'mini_magick', '~> 4.12'

# Development dependencies
group :development do
  gem "jekyll-watch"
  gem "jekyll-admin"
  gem "wdm", "~> 0.1.0" if Gem.win_platform?
end