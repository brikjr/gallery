<div class="bg-white rounded-lg shadow-md p-8">
  <% if flash[:success] %>
    <div class="mb-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= flash[:success] %></span>
    </div>
  <% end %>
  
  <% if flash[:error] %>
    <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= flash[:error] %></span>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl">Dashboard</h1>
    <a href="/admin/albums/new" 
       class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
      Create New Album
    </a>
  </div>

  <!-- Main Features -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Slider Management -->
    <div class="bg-gray-50 p-6 rounded">
      <h2 class="text-xl mb-4">Slider Images</h2>
      <p class="text-gray-600 mb-4">Manage the images shown in the homepage slider</p>
      <a href="/admin/slider" 
         class="inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
        Manage Slider
      </a>
    </div>
  </div>

  <!-- Galleries -->
  <h2 class="text-2xl mb-6">Galleries</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @galleries.each do |gallery| %>
      <div class="bg-gray-50 p-6 rounded">
        <h3 class="text-xl mb-4"><%= gallery.capitalize %></h3>
        <div class="space-y-3">
          <a href="/admin/gallery/<%= gallery %>" 
             class="block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 text-center">
            Manage Images
          </a>
          <a href="/admin/gallery/<%= gallery %>/header" 
             class="block bg-purple-500 text-white px-4 py-2 rounded hover:bg-purple-600 text-center">
            Update Header
          </a>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 border-t pt-6">
    <form action="/admin/push" method="post">
      <button type="submit" 
              class="bg-green-500 text-white px-6 py-2 rounded hover:bg-green-600 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
        </svg>
        Push to GitHub
      </button>
    </form>
  </div>
</div>