<div class="bg-white rounded-lg shadow-md p-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl">Manage Slider Images</h1>
    <a href="/admin/dashboard" class="text-blue-500 hover:text-blue-600">‚Üê Back to Dashboard</a>
  </div>

  <% if @flash_messages && @flash_messages[:error] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= @flash_messages[:error] %></span>
    </div>
  <% end %>

  <% if @flash_messages && @flash_messages[:success] %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= @flash_messages[:success] %></span>
    </div>
  <% end %>

  <!-- Current Slider Images -->
  <div class="mb-8">
    <h2 class="text-xl mb-4">Current Slider Images</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @slider_images.each do |image| %>
        <div class="bg-gray-50 p-4 rounded">
          <div class="mb-4 relative pt-[56.25%]"> <!-- 16:9 aspect ratio -->
            <img src="<%= image['url'] %>" 
                 alt="<%= image['gallery-name'] %>"
                 class="absolute inset-0 w-full h-full object-cover rounded">
          </div>
          
          <div class="space-y-2">
            <p class="font-medium"><%= image['gallery-name'] %></p>
            <p class="text-sm text-gray-600 break-all"><%= image['image_path'] %></p>
            <p class="text-sm text-gray-600 break-all"><%= image['gallery-folder'] %></p>
          </div>

          <!-- Update Form -->
          <form method="POST" action="/admin/slider/update" class="mt-4 space-y-4">
            <input type="hidden" name="old_path" value="<%= image['image_path'] %>">
            
            <div>
              <label class="block text-sm font-medium text-gray-700">Gallery Name</label>
              <input type="text" 
                     name="gallery_name" 
                     value="<%= image['gallery-name'] %>"
                     class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm p-2">
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">Image Path</label>
              <input type="text" 
                     name="new_path" 
                     value="<%= image['image_path'] %>"
                     class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm p-2">
            </div>

            <button type="submit" 
                    class="w-full bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
              Update
            </button>
          </form>
        </div>
      <% end %>
    </div>

    <% if @slider_images.empty? %>
      <p class="text-gray-500 text-center py-8">No slider images found</p>
    <% end %>
  </div>
</div>